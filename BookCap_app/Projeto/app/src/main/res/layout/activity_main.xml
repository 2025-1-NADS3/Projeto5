<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F4"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/conteudoPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoFecap"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:src="@drawable/fecap_logo"
            android:scaleType="fitCenter"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/textUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem-vindo!"
            android:textColor="#212121"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBiblioteca"
            style="@style/FancyMaterialButton"
            android:text="Biblioteca Virtual" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorico"
            style="@style/FancyMaterialButton"
            android:text="Meus Pedidos" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFeedback"
            style="@style/FancyMaterialButton"
            android:text="Feedbacks" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSair"
        style="@style/FancyMaterialButton.Grey"
        android:text="Sair"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
